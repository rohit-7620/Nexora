{
  "name": "nexora-health-copilot",
  "version": "1.0.0",
  "description": "AI-native health co-pilot for understanding food ingredients",
  "type": "module",
  "scripts": {
    "dev": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "dev:both": "concurrently \"npm run dev\" \"npm run client\"",
    "setup": "npm install && cd client && npm install && cd .."
  },
  "keywords": [
    "ai",
    "health",
    "nutrition",
    "copilot",
    "ingredients"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
